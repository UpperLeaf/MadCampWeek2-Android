        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_style"
        android:text="삭제" />

    <ImageView
        android:id="@+id/image_dialog_image"
        android:layout_width="310dp"
        android:layout_height="370dp">
    </ImageView>
</RelativeLayout>